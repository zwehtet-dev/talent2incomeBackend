# Docker Environment Configuration for Talent2Income Platform

# Application Configuration
APP_NAME="Talent2Income Platform"
APP_ENV=local
APP_KEY=base64:uqxgnxdaujKboTIeVr99+vKIK1ZPhzJ6SlX9Fnaa/PY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Performance
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=daily,stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_DAILY_DAYS=30

# Database Configuration - MySQL
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=talent2income
DB_USERNAME=talent2income_user
DB_PASSWORD=talent2income_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_FOREIGN_KEYS=true
DB_STRICT_MODE=true

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_CONNECTION=session
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Broadcasting
BROADCAST_CONNECTION=redis
BROADCAST_DRIVER=redis

# Redis Configuration
REDIS_CLIENT=predis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3
REDIS_BROADCAST_DB=4

# File Storage
FILESYSTEM_DISK=local
FILESYSTEM_CLOUD=s3

# Queue Configuration
QUEUE_CONNECTION=redis
REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE=default
REDIS_QUEUE_RETRY_AFTER=90

# Queue Monitoring Settings
QUEUE_MONITORING_ENABLED=true
QUEUE_AUTO_SCALING_ENABLED=false
QUEUE_FAILED_DRIVER=database

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=talent2income_docker
CACHE_TTL=3600
REDIS_SEARCH_DB=5
REDIS_API_DB=6

# Mail Configuration - MailHog
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@talent2income.local"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Payment Gateway Configuration (Development)
STRIPE_KEY=pk_test_
STRIPE_SECRET=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_test_

PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Security Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:3000,talent2income.local
SANCTUM_GUARD=web
SANCTUM_TOKEN_EXPIRATION=1440
SANCTUM_TOKEN_PREFIX=t2i_

# Password Hashing Configuration
HASH_DRIVER=bcrypt
BCRYPT_ROUNDS=12

# Authentication & Account Lockout
AUTH_MAX_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=900
AUTH_TRACK_IP=true
AUTH_PASSWORD_TIMEOUT=10800

# Rate Limiting
THROTTLE_REQUESTS_PER_MINUTE=60
THROTTLE_LOGIN_ATTEMPTS=5
THROTTLE_LOGIN_DECAY_MINUTES=1

# Search Configuration
SCOUT_DRIVER=database
SCOUT_QUEUE=true

# Compliance Configuration
AUDIT_ENABLED=true
AUDIT_LOG_SENSITIVE_DATA=false
AUDIT_INTEGRITY_CHECKING=true
GDPR_EXPORT_EXPIRY_DAYS=30
COMPLIANCE_CLEANUP_ENABLED=true

# Security Monitoring
SECURITY_AUTO_RESOLVE_FALSE_POSITIVES=true
SECURITY_CRITICAL_INCIDENT_NOTIFICATION=true

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI="${APP_URL}/api/auth/google/callback"

# Twilio SMS Configuration (for Myanmar phone verification)
TWILIO_SID=your_twilio_account_sid_here
TWILIO_TOKEN=your_twilio_auth_token_here
TWILIO_FROM=your_twilio_phone_number_here
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid_here

# SMS Configuration
SMS_VERIFICATION_CODE_LENGTH=6
SMS_CODE_EXPIRY_MINUTES=10
SMS_MAX_ATTEMPTS=3
SMS_LOCKOUT_MINUTES=30
SMS_RATE_LIMIT_MINUTES=2
SMS_REQUIRE_CONSENT=true
SMS_LOGGING_ENABLED=true
SMS_MOCK_IN_TESTING=true

# Alternative SMS Providers (for Myanmar)
SMS_PRIMARY_PROVIDER=twilio
MYANMAR_SMS_API_KEY=your_myanmar_sms_api_key_here
MYANMAR_SMS_API_SECRET=your_myanmar_sms_api_secret_here
