# Application Configuration
APP_NAME="Talent2Income Platform"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Performance
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=daily,stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_DAILY_DAYS=30
LOG_SLACK_WEBHOOK_URL=
LOG_SLACK_USERNAME="Talent2Income Alert"
LOG_SLACK_EMOJI=":warning:"

# Database Configuration - Primary (Write)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=talent2income
DB_USERNAME=root
DB_PASSWORD=

# Database Configuration - Read Replica (for future scaling)
DB_READ_HOST=127.0.0.1
DB_READ_PORT=3306
DB_READ_DATABASE=talent2income
DB_READ_USERNAME=root
DB_READ_PASSWORD=

# Database Options
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_FOREIGN_KEYS=true
DB_STRICT_MODE=true

# Testing Database
DB_TEST_CONNECTION=sqlite
DB_TEST_DATABASE=:memory:

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Broadcasting
BROADCAST_CONNECTION=redis
BROADCAST_DRIVER=redis

# File Storage
FILESYSTEM_DISK=local
FILESYSTEM_CLOUD=s3

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=talent2income
CACHE_TTL=3600

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3

# Memcached Configuration (Alternative)
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@talent2income.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Payment Gateway Configuration
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Security Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:3000
SANCTUM_GUARD=web
SESSION_DOMAIN=localhost

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Content Security Policy
CSP_ENABLED=false
CSP_REPORT_ONLY=true

# Rate Limiting
THROTTLE_REQUESTS_PER_MINUTE=60
THROTTLE_LOGIN_ATTEMPTS=5
THROTTLE_LOGIN_DECAY_MINUTES=1
THROTTLE_LOCKOUT_DURATION=60
THROTTLE_API_AUTHENTICATED=100
THROTTLE_API_UNAUTHENTICATED=20

# IP Filtering
IP_FILTERING_ENABLED=false
IP_WHITELIST=
IP_BLACKLIST=
ADMIN_IP_WHITELIST=

# Two-Factor Authentication
2FA_ENABLED=false
2FA_REQUIRED_ADMIN=true

# Audit Logging
AUDIT_LOGGING_ENABLED=true

# File Upload Security
VIRUS_SCANNING_ENABLED=false

# API Security
REQUIRE_HTTPS=false

# Session Security
MAX_CONCURRENT_SESSIONS=3

# Monitoring & Analytics
SENTRY_LARAVEL_DSN=
TELESCOPE_ENABLED=true

# Search Configuration
SCOUT_DRIVER=algolia
ALGOLIA_APP_ID=
ALGOLIA_SECRET=

# Frontend Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
